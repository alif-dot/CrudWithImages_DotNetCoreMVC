@model IEnumerable<CrudWithImages_DotNetCoreMVC.Models.Laptop>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-8 offset-2">
            <h1 class="text-center text-primary">Laptop Images</h1>
            <a class="btn btn-sm btn-primary float-right p-1 m-1" asp-action="AddLaptop" asp-controller="Laptop">Add Laptop</a>
            <table class="table table-bordered table-hover">
                <thead>
                    <tr class="text-center bg-dark text-light">
                        <th>Id</th>
                        <th>Brand</th>
                        <th>Description</th>
                        <th>Image</th>
                        <th>Action</th>
                    </tr>
                </thead>

                <tbody class="text-center">
                    @if (Model != null)
                    {
                        @foreach (var d in Model)
                        {
                            var imagePath = Url.Content("~/Image/" + d.Path); // Add a forward slash after "Image" to specify the correct directory
                            <tr>
                                <td>@d.Id</td>
                                <td>@d.Brand</td>
                                <td>@d.Description</td>
                                <td>
                                    <img src="@imagePath" height="100px" width="100px"> <!-- Removed unnecessary semicolon inside the img tag -->
                                </td>
                                <td>
                                    <a class="btn btn-primary" asp-action="Edit" asp-controller="Laptop" asp-route-id="@d.Id">Edit</a>
                                    <a class="btn btn-danger" onclick="return confirm('Are You sure, You want to delete this image?')" asp-action="Delete" asp-controller="Laptop" asp-route-id="@d.Id">Delete</a>
                                    <a class="btn btn-warning" asp-action="Details" asp-controller="Laptop" asp-route-id="@d.Id">Details</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
